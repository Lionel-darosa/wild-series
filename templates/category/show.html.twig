{% extends 'base.html.twig' %}

{% block title %}Category #{{ category.name }}{% endblock %}

{% block body %}
    <h1>Programs de la categorie : {{ category.name }}</h1>
    {% for program in programsByCategory %}
        <div class="media">
            <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.id }} /{{ program.title }}</h1>
                <p>{{ program.synopsis }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        </div>
    {% else %}
        Aucun program trouvé.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour aux Categories
    </a>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}