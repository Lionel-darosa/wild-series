{% extends 'base.html.twig' %}

{% block title %}Série #{{ season.program.title }}-Saison #{{ season.number }}{% endblock %}

{% block body %}
    <h1>Season</h1>

    <div class="media">
        <img class="align-self-start mr-3" src="{{ asset("build/images/#{season.program.poster}") }}" alt="{{ season.program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.number }} de {{ season.program.title }}</h1>
            <p>{{ season.desciption }}</p>
            <p>Catégorie : {{ season.program.category.name }}</p>
            <h4>Liste des épisodes</h4>
            <ul>
                {% for episode in season.episodes %}
                    <li><a href="{{ path("program_episode_show", {"program":  season.program.id , "season": season.id, "episode": episode.id }) }}">Episode {{ episode.number }} : {{ episode.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    
    <a href="{{ path('program_show', { 'id': season.program.id }) }}">back to list</a>

    <a href="{{ path('app_season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
